@model ProjectAd.Models.Payment
@{
    ViewData["Title"] = "Credits";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Credits</h1>

<p>Item Id: @ViewData["id"]</p>
<p>Price per credit: @ViewData["pricePerItem"]$</p>



<div class="row">
    <div class="col-md-4">
        <form asp-action="Payment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Qty" class="control-label"></label>
                <input asp-for="Qty" class="form-control" onkeyup='document.getElementById("price").value=(this.value*@ViewData["pricePerItem"])+"$"' />
                <span asp-validation-for="Qty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input ID="price" value="0$" class="form-control" disabled />
            </div>
            @*<img src="https://www.paypalobjects.com/webstatic/en_US/i/buttons/PP_logo_h_100x26.png" alt="PayPal Logo">*@
            <div class="form-group">
                <input type="submit" value="Buy" class="btn btn-primary" />
            </div>

        </form>
    </div>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}