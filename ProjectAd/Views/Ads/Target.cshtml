@model ProjectAd.Models.Target

@{
    ViewData["Title"] = "Target";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Target</h1>

<h4>Target</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Target">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgeFrom" class="control-label"></label>
                <input asp-for="AgeFrom" class="form-control" />
                <span asp-validation-for="AgeFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AgeTo" class="control-label"></label>
                <input asp-for="AgeTo" class="form-control" />
                <span asp-validation-for="AgeTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Sex>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="Gender" class="text-danger" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
